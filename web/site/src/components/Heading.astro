---
interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  class?: string;
}

const { level, class: className } = Astro.props;
---

<>
  {
    level === 1 && (
      <h1 class:list={[className]}>
        <slot />
      </h1>
    )
  }
  {
    level === 2 && (
      <h2 class:list={[className]}>
        <slot />
      </h2>
    )
  }
  {
    level === 3 && (
      <h3 class:list={[className]}>
        <slot />
      </h3>
    )
  }
  {
    level === 4 && (
      <h4 class:list={[className]}>
        <slot />
      </h4>
    )
  }
  {
    level === 5 && (
      <h5 class:list={[className]}>
        <slot />
      </h5>
    )
  }
  {
    level === 6 && (
      <h6 class:list={[className]}>
        <slot />
      </h6>
    )
  }
</>

<style>
  h3 {
    font-size: 1rem;
    font-weight: 400;
    font-style: normal;

    text-transform: uppercase;
  }
</style>
