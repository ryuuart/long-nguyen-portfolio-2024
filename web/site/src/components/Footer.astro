---
import FooterList from "./FooterList.astro";
import { FOOTER_LIST_LINKS, FOOTER_LIST_SOCIALS } from "../consts";
const today = new Date();
---

<footer class="section">
  <div class="wrapper">
    <section class="links">
      <FooterList
        title={FOOTER_LIST_LINKS.title}
        links={FOOTER_LIST_LINKS.links}
      />
      <FooterList
        title={FOOTER_LIST_SOCIALS.title}
        links={FOOTER_LIST_SOCIALS.links}
      />
    </section>
    <small>
      &copy; {today.getFullYear()} Long Nguyen. All rights reserved.
    </small>
  </div>
</footer>

<style>
  footer {
    flex-shrink: 0;
  }

  small {
    opacity: 0.5;

    font-size: 1rem;
  }

  .wrapper {
    margin: var(--spacing-sm) var(--spacing-md);
  }
</style>
